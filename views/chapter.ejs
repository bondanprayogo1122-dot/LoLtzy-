<%- include('partials/head', { pageTitle: pageTitle }) %>
<%- include('partials/header') %>
<div class="rounded-2xl bg-white/5 border border-white/10 p-4">
  <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-2 mb-4">
    <h1 class="text-xl font-bold"><%= chapter.title %></h1>
    <div class="flex items-center gap-2">
      <% if (chapter.prev) { %><a href="/<%= chapter.prev %>" class="px-4 py-2 rounded-xl border border-white/10 bg-white/5 hover:bg-white/10">← Prev</a><% } else { %><span class="px-4 py-2 rounded-xl border border-white/10 bg-white/10 text-gray-400">← Prev</span><% } %>
      <% if (chapter.next) { %><a href="/<%= chapter.next %>" class="px-4 py-2 rounded-xl border border-white/10 bg-white/5 hover:bg-white/10">Next →</a><% } else { %><span class="px-4 py-2 rounded-xl border border-white/10 bg-white/10 text-gray-400">Next →</span><% } %>
    </div>
  </div>

  <% if (chapter.sources && chapter.sources[0] && chapter.sources[0].images) { %>
    <div class="space-y-3">
      <% for (var i = 0; i < chapter.sources[0].images.length; i++) { %>
        <img src="<%= chapter.sources[0].images[i] %>" alt="<%= chapter.title %> page <%= (i+1) %>" class="w-full h-auto rounded-xl border border-white/10" loading="lazy" referrerpolicy="no-referrer">
      <% } %>
    </div>
  <% } else if (chapter.image) { %>
    <img src="<%= chapter.image %>" alt="<%= chapter.title %>" class="w-full h-auto rounded-xl border border-white/10" loading="lazy" referrerpolicy="no-referrer">
  <% } else { %>
    <div class="text-center text-gray-400">Tidak ada gambar.</div>
  <% } %>
</div>
<%- include('partials/footer') %>
<%- include('partials/end') %>
